@model Order
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

@{
    // Toplam
    var total = Model.Lines.Sum(c => c.Product.Price * c.Quantity);
}

<div class="row shadow my-3">
    <div class="col-md-3 border-1 border-dark p-3 bg-light shadow">
        <h5 class="display-5 text-center">
            <i class="fa fa-address-book text-primary"></i>
            <br />
            @Model?.Name
        </h5>
        <p>@Model?.City</p>
        <p>@Model?.District</p>
        <p>@Model?.Neighborhood</p>
        <p>@Model?.Address</p>
        <p class="rounded-2 p-3">
            <span class="bg-warning p-2">Sipari≈ü</span>
            <span class="bg-primary p-2">
                @(Model.Cancelled ? "ƒ∞ptal Edildi"
                                : (Model.Shipped ? "Onaylandƒ±" : "Onay A≈üamasƒ±nda"))
            </span>
        </p>
    </div>

    <div class="col-md-9">
        <h6 class="display-6 mt-3 text-center mb-3">Sepet</h6>

        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <span class="fw-semibold">Sipari≈ü √ñzeti</span>
                <span class="badge text-bg-light">Fiyat</span>
            </div>

            <div class="list-group list-group-flush">
                @foreach (var item in Model.Lines)
                {
                    var lineTotal = item.Quantity * item.Product.Price;
                    <div class="list-group-item py-3 d-flex align-items-center justify-content-between">
                        <!-- üñºÔ∏è sol tarafta minik √ºr√ºn g√∂rseli -->
                        <div class="d-flex align-items-center">
                            <img src="@item.Product.ImageUrl" width="50" class="rounded me-3 order-thumb" />
                            <div>
                                <div class="fw-semibold">
                                    @item.Product.ProductName
                                    @* ‚¨áÔ∏è Beden varsa parantez i√ßinde g√∂ster *@
                                    @if (!string.IsNullOrWhiteSpace(item.Size))
                                    {
                                        <span class="text-muted">(@item.Size Beden)</span>
                                    }
                                </div>
                                <div class="text-muted small">
                                    @item.Quantity √ó @item.Product.Price.ToString("C2")
                                </div>
                            </div>
                        </div>
                        <div class="price-col fw-semibold">@lineTotal.ToString("C2")</div>
                    </div>
                }

                <!-- Ara Toplam -->
                <div class="list-group-item py-3 d-flex justify-content-between">
                    <div class="text-muted">Ara Toplam</div>
                    <div class="price-col">@total.ToString("C2")</div>
                </div>

                <div class="list-group-item py-3 d-flex justify-content-between">
                    <div class="text-muted">Kargo</div>
                    <div class="price-col">‚Ç∫0,00</div>
                </div>

                <!-- Toplam (vurgulu) -->
                <div class="list-group-item py-3 d-flex justify-content-between align-items-center total-row">
                    <div class="fw-semibold">Toplam</div>
                    <div class="price-col fw-bold display-7">@total.ToString("C2")</div>
                </div>
            </div>
        </div>

        <div class="text-center mt-3 p-2">
            <!-- Onayla -->
            <form method="post" asp-action="Complete" class="d-inline">
                <input type="hidden" name="id" value="@Model.OrderId" />
                <button type="submit" class="btn btn-primary"
                    disabled="@(Model.Shipped || Model.Cancelled ? "disabled" : null)">
                    Sipari≈üi Onayla
                </button>
            </form>

            <!-- ƒ∞ptal Et -->
            <form method="post" asp-action="Cancel" class="d-inline"
                onsubmit="return confirm('Bu sipari≈üi iptal etmek istediƒüinize emin misiniz?');">
                <input type="hidden" name="id" value="@Model.OrderId" />
                <button type="submit" class="btn btn-warning ms-2"
                    disabled="@(Model.Shipped || Model.Cancelled ? "disabled" : null)">
                    <i class="fa fa-ban"></i> Sipari≈üi ƒ∞ptal Et
                </button>
            </form>

            <!-- Sil -->
            <form method="post" asp-action="Delete" class="d-inline"
                onsubmit="return confirm('Bu sipari≈üi tamamen silmek istediƒüinize emin misiniz?');">
                <input type="hidden" name="id" value="@Model.OrderId" />
                <button type="submit" class="btn btn-danger ms-2">
                    <i class="fa fa-trash"></i> Sipari≈üi Sil
                </button>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmDelete(form) {
        event.preventDefault();
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu sipari≈üi silmek √ºzeresiniz!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, sil!',
            cancelButtonText: 'Vazge√ß'
        }).then((result) => {
            if (result.isConfirmed) form.submit();
        });
    }
</script>