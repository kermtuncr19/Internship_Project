@model Order
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

@{
    var total = @Model.Lines.Sum(c => c.Product.Price * c.Quantity);
}

<div class="row shadow my-3">
    <div class="col-md-3 border-1 border-dark p-3 bg-light shadow">
        <h5 class="display-5 text-center">
            <i class="fa fa-address-book text-primary"></i>
            <br />
            @Model?.Name
        </h5>
        <p>@Model?.Line1</p>
        <p>@Model?.Line2</p>
        <p>@Model?.Line3</p>
        <p>@Model?.City</p>
        <p class="rounded-2 p-3">
            <span class="bg-warning p-2">Sipariş</span>
            <span class="bg-primary p-2">@(Model.Shipped ? "Onaylandı" : "Onay Aşamasında")</span>
        </p>
    </div>
    <div class="col-md-9">
        <h6 class="display-6 mt-3 text-center">
            Cart
        </h6>
        <ul class="list-group">
            @foreach (var cartItem in Model?.Lines)
            {
                <li class="list-group-item d-flex justify-content-between brand">
                    @cartItem.Product.ProductName
                    <b>@cartItem.Quantity * @cartItem.Product.Price.ToString("C2")
                        = @((cartItem.Quantity * cartItem.Product.Price).ToString("C2"))
                    </b>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between text-danger">
                Total
                <b>@total.ToString("C2")</b>
            </li>
        </ul>
        <div class="text-center mt-2 p-2">
            <form method="post" asp-action="Complete">
                <input type="hidden" name="id" value="@Model.OrderId" />
                <button type="submit" class="btn btn-primary" disabled="@Model?.Shipped">
                    Siparişi Onayla
                </button>
            </form>
            <form method="post" asp-action="Delete"
                onsubmit="return confirm('Bu siparişi silmek istediğinize emin misiniz?');">
                <input type="hidden" name="id" value="@Model.OrderId" />
                <button type="submit" class="btn btn-danger mt-2">
                    <i class="fa fa-trash"></i> Siparişi Sil
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Sayfanın altına -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmDelete(form) {
        event.preventDefault();
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu siparişi silmek üzeresiniz!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, sil!',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) form.submit();
        });
    }
</script>

