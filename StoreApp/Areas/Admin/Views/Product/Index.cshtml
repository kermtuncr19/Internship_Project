@model IEnumerable<Product>

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="text-center">
    <div class="display-6">Ürünler</div>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i> Ekle
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fotoğraf</th>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var prd in Model)
        {
            <tr>
                <td>@prd.ProductId</td>
                <td>
                    <img src="@prd?.ImageUrl" alt="@prd?.ProductName" width="50" class="rounded">
                </td>
                <td>@prd.ProductName</td>
                <td>@prd.Price.ToString("c")</td>
                <td>
                    <div class="d-flex justify-content-center">
                        <a class="btn btn-warning me-2" asp-action="Update" asp-route-id="@prd.ProductId">
                            <i class="fa fa-edit"></i> Düzenle
                        </a>

                        <!-- ✅ POST ile silme formu -->
                        <a class="btn btn-primary me-2" target="_blank"
                           asp-area=""
                           asp-controller="Product"
                           asp-action="Get"
                           asp-route-id="@prd.ProductId">
                            <i class="fa fa-search"></i> Detaylar
                        </a>
                        <form asp-action="Delete"
                              asp-route-id="@prd.ProductId"
                              method="post"
                              class="d-inline delete-form">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger ">
                                <i class="fa fa-trash"></i> Sil
                            </button>
                        </form>

                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".delete-form").forEach(function (form) {
            form.addEventListener("submit", function (e) {
                e.preventDefault();

                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu ürünü silmek üzeresiniz!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Evet, sil',
                    cancelButtonText: 'Vazgeç',
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit(); // ✅ Onaylandı → POST
                    }
                });
            });
        });
    });
    </script>
}
