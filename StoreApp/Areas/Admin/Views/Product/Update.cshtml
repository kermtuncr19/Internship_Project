@model ProductDtoForUpdate

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="text-center">
    <div class="display-6">Düzenle</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="ImageUrl" />

    <div class="form-group my-3">
        <label asp-for="CategoryId">Kategori Adı</label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId">
        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName">Ürün Adı</label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Summary">Özet</label>
        <input asp-for="Summary" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Price">Fiyat</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-check my-3">
        <input class="form-check-input" type="checkbox" asp-for="RequiresSize" id="RequiresSize">
        <label class="form-check-label" for="RequiresSize">Beden seçimi zorunlu</label>
    </div>

    <div class="form-group my-3">
        <label asp-for="SizeOptionsCsv" class="form-label">
            Bedenler (CSV) <span class="text-muted small">(örn: XS,S,M,L,XL)</span>
        </label>
        <input asp-for="SizeOptionsCsv" class="form-control" />
        <span class="form-text text-muted">Boş bırakırsanız varsayılan liste: XS,S,M,L,XL</span>
    </div>

    <div class="form-check form-switch my-3">
        <input asp-for="ShowCase" class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Vitrin Ürün</label>
    </div>

    <!-- ✅ MEVCUT FOTOĞRAFLAR -->
    <div class="form-group my-4">
        <label class="form-label fw-bold">Mevcut Fotoğraflar</label>
        <div id="existingImages" class="row g-3">
            @if (ViewBag.ProductImages != null)
            {
                @foreach (var img in ViewBag.ProductImages)
                {
                    <div class="col-md-3" data-image-id="@img.ProductImageId">
                        <div class="card">
                            <img src="@img.ImageUrl" class="card-img-top" alt="Ürün fotoğrafı" style="height:200px; object-fit:cover;">
                            <div class="card-body p-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">Sıra: @img.DisplayOrder</small>
                                    @if (img.IsMain)
                                    {
                                        <span class="badge bg-success">Ana Foto</span>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-primary set-main-btn" 
                                                data-image-id="@img.ProductImageId">
                                            Ana Yap
                                        </button>
                                    }
                                </div>
                                <button type="button" class="btn btn-sm btn-danger w-100 mt-2 delete-image-btn" 
                                        data-image-id="@img.ProductImageId">
                                    <i class="fa fa-trash"></i> Sil
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <!-- ✅ YENİ FOTOĞRAF EKLEME -->
    <div class="form-group my-4">
        <label class="form-label fw-bold">Yeni Fotoğraflar Ekle</label>
        <input name="newImages" type="file" class="form-control" accept="image/*" multiple />
        <span class="form-text text-muted">
            <i class="bi bi-info-circle"></i> Birden fazla fotoğraf seçebilirsiniz
        </span>
    </div>

    <div class="form-group my-3">
        <div class="d-flex justify-content-left">
            <button class="btn btn-primary me-2" type="submit">Güncelle</button>
            <a asp-action="Index" class="btn btn-warning">Ürünler</a>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        // Ana fotoğraf yapma
        document.querySelectorAll('.set-main-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                const imageId = this.getAttribute('data-image-id');
                const productId = @Model.ProductId;
                
                try {
                    const response = await fetch('/Admin/Product/SetMainImage', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify({ productId: productId, imageId: imageId })
                    });
                    
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Ana fotoğraf ayarlanamadı');
                    }
                } catch (err) {
                    console.error('Hata:', err);
                    alert('Ana fotoğraf ayarlanamadı');
                }
            });
        });
        
        // Fotoğraf silme
        document.querySelectorAll('.delete-image-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                if (!confirm('Bu fotoğrafı silmek istediğinize emin misiniz?')) return;
                
                const imageId = this.getAttribute('data-image-id');
                
                try {
                    const response = await fetch(`/Admin/Product/DeleteImage/${imageId}`, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    });
                    
                    if (response.ok) {
                        document.querySelector(`[data-image-id="${imageId}"]`).remove();
                    } else {
                        alert('Fotoğraf silinemedi');
                    }
                } catch (err) {
                    console.error('Hata:', err);
                    alert('Fotoğraf silinemedi');
                }
            });
        });
    </script>
}