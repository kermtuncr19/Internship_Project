@model IEnumerable<Entities.Models.ActivityViewModel>

<div class="activity-timeline">
    @if (Model != null && Model.Any())
    {
        @foreach (var activity in Model)
        {
            <div class="activity-item d-flex mb-4">
                <div class="activity-icon me-3">
                    @if (activity.Type == "Order")
                    {
                        <div class="icon-box-sm bg-success bg-opacity-10 text-success rounded-circle p-2">
                            <i class="bi bi-cart-check"></i>
                        </div>
                    }
                    else if (activity.Type == "Product")
                    {
                        <div class="icon-box-sm bg-primary bg-opacity-10 text-primary rounded-circle p-2">
                            <i class="bi bi-box-seam"></i>
                        </div>
                    }
                    else if (activity.Type == "User")
                    {
                        <div class="icon-box-sm bg-warning bg-opacity-10 text-warning rounded-circle p-2">
                            <i class="bi bi-person"></i>
                        </div>
                    }
                    else
                    {
                        <div class="icon-box-sm bg-info bg-opacity-10 text-info rounded-circle p-2">
                            <i class="bi bi-bell"></i>
                        </div>
                    }
                </div>
                <div class="flex-grow-1">
                    <p class="mb-1 fw-semibold">@activity.Title</p>
                    <p class="text-muted small mb-1">@activity.Description</p>
                    <small class="text-muted">@activity.TimeAgo</small>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-muted">Hen√ºz aktivite yok.</p>
    }
</div>