@model IEnumerable<Entities.Models.ProductSalesViewModel>

<div class="top-products-list">
    @if (Model != null && Model.Any())
    {
        @foreach (var product in Model)
        {
            <div class="product-item d-flex align-items-center mb-3 pb-3 border-bottom">
                <div class="product-image me-3">
                    <img src="@product.ImageUrl" alt="@product.Name" class="rounded" style="width: 50px; height: 50px; object-fit: cover;">
                </div>
                <div class="flex-grow-1">
                    <h6 class="mb-1 fw-semibold">@product.Name</h6>
                    <small class="text-muted">@product.SalesCount satış</small>
                </div>
                <div class="text-end">
                    <div class="fw-bold text-success">₺@product.TotalRevenue.ToString("N2")</div>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-muted">Henüz satış verisi yok.</p>
    }
</div>