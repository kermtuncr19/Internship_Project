@model IEnumerable<Entities.Models.Category>
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Categories";
}



<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Kategoriler</h2>
    <a asp-action="Create" class="btn btn-primary">
    <i class="fa-solid fa-plus"></i>
    Yeni Kategori</a>
</div>



<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.CategoryId</td>
                <td>@c.CategoryName</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@c.CategoryId" class="btn btn-sm btn-warning">
                    <i class="fa-solid fa-pen-to-square"></i>
                    Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@c.CategoryId" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-trash"></i>Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
