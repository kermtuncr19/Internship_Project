    <div class="chips d-flex flex-nowrap overflow-auto gap-2 pe-2">
      <a asp-controller="Product" asp-action="Index"
        class="btn btn-sm rounded-pill px-3 @((isProductIndex && activeId == null) ? "btn-navy" : "btn-outline-navy")">
