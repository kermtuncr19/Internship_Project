      </a>

      @if (cats != null)
      {
        foreach (var c in cats)
        {
          <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@c.CategoryId"
            class="btn btn-sm rounded-pill px-3 @(activeId == c.CategoryId ? "btn-navy" : "btn-outline-navy")">
            @c.CategoryName
          </a>
        }
      }
    </div>
  </div>
</div>

