@model ForgotPasswordModel

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<div class="login-container">
    <div class="login-card">
        <h2 class="login-title">Şifremi Unuttum</h2>
        <p class="text-center text-muted mb-4">
            E-posta adresinizi girin, size şifre sıfırlama linki gönderelim.
        </p>

        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                <div asp-validation-summary="All"></div>
            </div>
        }

        <form method="post" asp-action="ForgotPassword">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Email" class="form-label">
                    <i class="fa-regular fa-envelope"></i> E-posta Adresi
                </label>
                <input asp-for="Email" class="form-input" 
                       placeholder="ornek@email.com" 
                       autocomplete="email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <button type="submit" class="btn-login">
                <i class="fa-solid fa-paper-plane"></i> Sıfırlama Linki Gönder
            </button>
        </form>

        <div class="register-link">
            <a asp-action="Login"><i class="fa-solid fa-arrow-left"></i> Giriş Sayfasına Dön</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}