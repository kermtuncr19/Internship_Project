@model LoginModel
<meta charset="utf-8">

<div class="text-center my-5">
    <h6 class="display-6">
        <i class="fa-solid text-white fa-right-to-bracket bg-secondary p-3 rounded-5 bg-warning"></i>
        <br />
        Giriş Yap
    </h6>
</div>

<div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6">
        <div class="text-danger" asp-validation-summary="All"></div>

        <form method="post" asp-action="Login">
            <input type="hidden" asp-for="ReturnUrl" />

            <!-- E-posta veya Kullanıcı Adı (TEK ALAN) -->
            <div class="form-group my-3">
                <label asp-for="Identifier" class="form-label">E-posta veya Kullanıcı Adı</label>
                <input asp-for="Identifier" class="form-control" autocomplete="username" />
                <span class="text-danger" asp-validation-for="Identifier"></span>
            </div>

            <!-- Şifre + göster/gizle -->
            <div class="form-group my-3">
                <label asp-for="Password" class="form-label">Şifre</label>

                <div class="pwd-wrap">
                    <input type="password" asp-for="Password" class="form-control pwd-input"
                        autocomplete="current-password" />
                    <span id="togglePwdLogin" class="pwd-toggle-link" role="button" tabindex="0" aria-pressed="false">
                        Göster
                    </span>
                </div>

                <span class="text-danger" asp-validation-for="Password"></span>
            </div>



            <div class="form-group my-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-right-to-bracket"></i>
                    Giriş Yap
                </button>
            </div>
        </form>

        <div class="text-center">
            Henüz Üye Değil misin?
            <a class="text-decoration-none" asp-action="Register"> Şimdi Katıl</a>
        </div>
    </div>

    <div class="col-md-3"></div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const link = document.getElementById('togglePwdLogin');
            const input = document.getElementById('@Html.IdFor(m => m.Password)');
            if (!link || !input) return;

            function toggle() {
                const isHidden = input.type === 'password';
                input.type = isHidden ? 'text' : 'password';
                link.textContent = isHidden ? 'Gizle' : 'Göster';
                link.setAttribute('aria-pressed', String(isHidden));
            }

            link.addEventListener('click', toggle);
            link.addEventListener('keydown', e => {
                if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); toggle(); }
            });
        });
    </script>
}