@model ResetPasswordModel

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<div class="login-container">
    <div class="login-card">
        <div class="text-center mb-4">
            <i class="fa-solid fa-key" style="font-size: 3rem; color: #001f54;"></i>
        </div>
        <h2 class="login-title">Yeni Şifre Oluştur</h2>
        <p class="text-center text-muted mb-4">
            <strong>@Model.Email</strong> için yeni bir şifre belirleyin.
        </p>

        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                <div asp-validation-summary="All"></div>
            </div>
        }

        <form method="post" asp-action="ResetPassword">
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div class="form-group">
                <label asp-for="NewPassword" class="form-label">
                    <i class="fa-solid fa-lock"></i> Yeni Şifre
                </label>
                <div class="password-wrapper">
                    <input type="password" asp-for="NewPassword" class="form-input" placeholder="Yeni şifrenizi girin"
                        autocomplete="new-password" />
                    <span class="password-toggle" onclick="togglePassword(this)">
                        <i class="fa-regular fa-eye"></i>
                    </span>

                </div>
                <span class="text-danger" asp-validation-for="NewPassword"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">
                    <i class="fa-solid fa-lock"></i> Şifre Tekrar
                </label>
                <div class="password-wrapper">
                    <input type="password" asp-for="ConfirmPassword" class="form-input"
                        placeholder="Şifrenizi tekrar girin" autocomplete="new-password" />
                    <span class="password-toggle" onclick="togglePassword(this)">
                        <i class="fa-regular fa-eye"></i>
                    </span>
                </div>
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>

            <div class="alert alert-info" style="font-size: 0.85rem;">
                <i class="fa-solid fa-info-circle"></i>
                <strong>Şifre Kuralları:</strong><br>
                • En az 8 karakter<br>
                • En az bir küçük harf<br>
                • En az bir büyük harf<br>
                • En az bir rakam<br>
                • Boşluk içeremez
            </div>

            <button type="submit" class="btn-login">
                <i class="fa-solid fa-check"></i> Şifreyi Güncelle
            </button>
        </form>

        <div class="register-link">
            <a asp-action="Login">
                <i class="fa-solid fa-arrow-left"></i> Giriş Sayfasına Dön
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(toggleEl) {
            const wrapper = toggleEl.closest('.password-wrapper');
            const input = wrapper?.querySelector('input');
            const icon = toggleEl.querySelector('i');

            if (!input || !icon) return;

            const isPassword = input.type === 'password';
            input.type = isPassword ? 'text' : 'password';

            icon.classList.toggle('fa-eye', !isPassword);
            icon.classList.toggle('fa-eye-slash', isPassword);
        }
    </script>

}