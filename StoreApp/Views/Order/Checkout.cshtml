@model Order
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post" asp-action="Checkout">
    <div class="form-group my-3">
        <label asp-for="Name">İsim</label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="form-group my-3">
        <label asp-for="Line1">Mahalle</label>
        <input class="form-control" asp-for="Line1">
    </div>
    <div class="form-group my-3">
        <label asp-for="Line2">Cadde</label>
        <input class="form-control" asp-for="Line2">
    </div>
    <div class="form-group my-3">
        <label asp-for="Line3">Sokak</label>
        <input class="form-control" asp-for="Line3">
    </div>
    <div class="form-group my-3">
        <label asp-for="City">Şehir</label>
        <input class="form-control" asp-for="City">
    </div>
    <div class="form-group my-3">
        <input asp-for="GiftWrap">
        <label>Bu Ürünleri Hediye Paketi Yap.</label>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">
        Siparişi Tamamla
        </button>    
    </div>
</form>