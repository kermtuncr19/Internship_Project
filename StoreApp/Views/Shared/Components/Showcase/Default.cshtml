@if (Model.ShowcaseProducts != null && Model.ShowcaseProducts.Any())
{
    <div class="container py-5">
        <div class="showcase-header mb-4">
            <h2 class="showcase-title">
                <i class="fa-solid fa-star"></i>
                Vitrin √úr√ºnleri
            </h2>
