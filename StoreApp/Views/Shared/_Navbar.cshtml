<script>
  
  document.addEventListener('DOMContentLoaded', function(){
    const msgs = document.querySelectorAll('.promo-viewport .promo-msg');
    if (!msgs.length) return;

    let i = 0, t;
    function show(n){
      msgs.forEach((m,idx)=> m.classList.toggle('active', idx===n));
    }
    function next(){
      i = (i+1) % msgs.length;
      show(i);
    }
    t = setInterval(next, 5500);

    const viewport = document.querySelector('.promo-viewport');
    viewport.addEventListener('mouseenter', ()=> clearInterval(t));
    viewport.addEventListener('mouseleave', ()=> t = setInterval(next, 4500));
  });

  
  document.addEventListener('DOMContentLoaded', function() {
    if (window.innerWidth <= 991) {
      const userDropdown = document.querySelector('.user-dropdown-hover');
      const userMenu = document.getElementById('userMenu');
      
      if (userDropdown && userMenu) {
        userMenu.addEventListener('click', function(e) {
          e.preventDefault();
          userDropdown.classList.toggle('show');
        });

         
        document.addEventListener('click', function(e) {
          if (!userDropdown.contains(e.target)) {
            userDropdown.classList.remove('show');
          }
        });
      }
    }
  });
</script>