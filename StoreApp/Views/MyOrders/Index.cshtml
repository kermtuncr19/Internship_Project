@model List<Entities.Models.Order>
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<div class="container my-4">
    <div class="h5 mb-3">Siparişlerim</div>
    @if (!Model.Any())
    {
        <div class="alert alert-light">Henüz siparişiniz yok.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th>Toplam</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model)
                    {
                        var total = o.Lines.Sum(l => l.Product.Price * l.Quantity);
                        <tr>
                            <td>@o.OrderId</td>
                            <td>@o.OrderedAt.ToLocalTime().ToString("g")</td>
                            <td>@(o.Cancelled ? "İptal" : (o.Shipped ? "Onaylandı" : "Onay Aşamasında"))</td>
                            <td>@total.ToString("C2")</td>
                            <td class="text-end">
                                <a asp-action="Detail" asp-route-id="@o.OrderId"
                                    class="btn btn-outline-secondary btn-sm">Detay</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>