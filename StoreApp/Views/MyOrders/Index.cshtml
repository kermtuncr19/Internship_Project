@model List<Entities.Models.Order>
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="container my-4">
    <div class="h5 mb-3">Siparişlerim</div>
    @if (!Model.Any())
    {
        <div class="alert alert-light">Henüz siparişiniz yok.</div>
    }
    else
    {
        <div class="orders-list">
            @foreach (var o in Model)
            {
                var total = o.Lines.Sum(l => l.Product.Price * l.Quantity);
                string statusBadge = "";
                string statusText = "";
                if (o.Cancelled)
                {
                    statusBadge = "bg-danger";
                    statusText = "İptal Edildi";
                }
                else if (o.Delivered)
                {
                    statusBadge = "bg-success";
                    statusText = "Teslim Edildi";
                }
                else if (o.InTransit)
                {
                    statusBadge = "bg-info";
                    statusText = "Kargoda";
                }
                else if (o.Preparing)
                {
                    statusBadge = "bg-warning text-dark";
                    statusText = "Hazırlanıyor";
                }
                else if (o.Shipped)
                {
                    statusBadge = "bg-primary";
                    statusText = "Onaylandı";
                }
                else
                {
                    statusBadge = "bg-secondary";
                    statusText = "Onay Bekliyor";
                }
                <div class="order-card mb-3">
                    <div class="order-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="fw-semibold">Sipariş #@o.OrderId</span>
                                <span class="text-muted ms-3 small">@o.OrderedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</span>
                            </div>
                            <div>
                                <span class="badge @statusBadge">@statusText</span>
                            </div>
                        </div>
                    </div>
                    <div class="order-body">
                        <div class="row g-3">
                            @foreach (var line in o.Lines)
                            {
                                var imgSrc = "/images/placeholders/product-thumb.png";
                                if (!string.IsNullOrWhiteSpace(line.Product?.ImageUrl))
                                {
                                    if (line.Product.ImageUrl.StartsWith("http", StringComparison.OrdinalIgnoreCase) || line.Product.ImageUrl.StartsWith("/"))
                                    {
                                        imgSrc = line.Product.ImageUrl;
                                    }
                                    else
                                    {
                                        imgSrc = Url.Content($"~/images/{line.Product.ImageUrl}");
                                    }
                                }
                                <div class="col-md-6">
                                    <div class="order-product-item">
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="order-product-image me-3">
                                                <img src="@imgSrc" alt="@line.Product?.ProductName" class="img-fluid rounded" loading="lazy" />
                                            </div>
                                            <div class="flex-grow-1">
                                                <div class="fw-semibold mb-1">@line.Product?.ProductName</div>
                                                <div class="text-muted small">
                                                    @if (!string.IsNullOrWhiteSpace(line.Size))
                                                    {
                                                        <span class="me-2">Beden: <strong>@line.Size</strong></span>
                                                    }
                                                    <span>Adet: <strong>@line.Quantity</strong></span>
                                                </div>
                                                <div class="text-primary fw-semibold mt-1">
                                                    @((line.Product?.Price ?? 0).ToString("C2"))
                                                </div>
                                            </div>
                                        </div>
                                        @if (o.Delivered && line.Product != null)
                                        {
                                            <div class="mt-2">
                                                <a asp-controller="Review" asp-action="Create" asp-route-productId="@line.Product.ProductId" asp-route-orderId="@o.OrderId" class="btn btn-sm btn-outline-warning">
                                                    <i class="fa fa-star me-1"></i> Değerlendir
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="order-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="text-muted small">Toplam Tutar:</span>
                                <span class="fs-5 fw-bold text-primary ms-2">@total.ToString("C2")</span>
                            </div>
                            <div class="d-flex gap-2">
                                
                                <a asp-action="Detail" asp-route-id="@o.OrderId" class="btn btn-outline-primary">
                                    <i class="fa fa-eye me-1"></i> Detay Gör
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>