@model Entities.Models.Order
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
@{
    var total = Model.Lines.Sum(l => (l.Product?.Price ?? l.UnitPrice) * l.Quantity);
}
<div class="container my-4">
    <div class="card shadow-soft">
        <div class="card-header bg-white d-flex justify-content-between">
            <div>#@Model.OrderId • @Model.OrderedAt.ToLocalTime().ToString("g")</div>
            <div>@(Model.Cancelled ? "İptal" : (Model.Shipped ? "Onaylandı" : "Onay Aşamasında"))</div>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <div class="fw-semibold">@Model.Name</div>
                <div class="text-muted small">@Model.City • @Model.District / @Model.Neighborhood / @Model.Address</div>
            </div>

            <ul class="list-group list-group-flush">
                @foreach (var line in Model.Lines)
                {
                    var unit = line.Product?.Price ?? line.UnitPrice;
                    var lineTotal = unit * line.Quantity;

                    // Görsel yolu: boşsa placeholder'a düş, doluysa normalize et
                    string imgSrc;
                    if (string.IsNullOrWhiteSpace(line.Product?.ImageUrl))
                    {
                        imgSrc = Url.Content("~/images/placeholders/product-thumb.png");
                    }
                    else if (line.Product!.ImageUrl.StartsWith("http", StringComparison.OrdinalIgnoreCase)
                    || line.Product.ImageUrl.StartsWith("/"))
                    {
                        // Tam URL veya kökten göreli yol
                        imgSrc = line.Product.ImageUrl;
                    }
                    else
                    {
                        // Sadece dosya adı tutuluyorsa: wwwroot/images altına tamamla
                        imgSrc = Url.Content($"~/images/{line.Product.ImageUrl}");
                    }

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <img src="@imgSrc" alt="@(line.Product?.ProductName ?? "Ürün")" class="order-thumb me-3"
                                loading="lazy" width="48" height="48" />
                            <div>
                                <div class="fw-semibold">
                                    @line.Product?.ProductName
                                    @((!string.IsNullOrEmpty(line.Size) ? $" ({line.Size})" : ""))
                                </div>
                                <div class="text-muted small">
                                    @line.Quantity × @unit.ToString("C2")
                                </div>
                            </div>
                        </div>
                        <div class="fw-semibold">@lineTotal.ToString("C2")</div>
                    </li>
                }

                <li class="list-group-item d-flex justify-content-between">
                    <span>Ara Toplam</span><span>@total.ToString("C2")</span>
                </li>
                <li class="list-group-item d-flex justify-content-between fw-bold">
                    <span>Toplam</span><span>@total.ToString("C2")</span>
                </li>
            </ul>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-navy btn-pill">Siparişlere Dön</a>
    </div>
</div>