@model Entities.Models.Order
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
@{
    var total = Model.Lines.Sum(l => (l.Product?.Price ?? l.UnitPrice) * l.Quantity);

    decimal shippingThreshold = 2000m;
    decimal shippingCost = total >= shippingThreshold ? 0m : 39.99m;
    decimal grandTotal = total + shippingCost;

    int installment = Model.Installment ?? 1;                 // ðŸ‘ˆ DBâ€™den
    decimal perInstallment = installment > 1 ? grandTotal / installment : 0m;
}

<div class="container my-4">
    <div class="card shadow-soft">
        <div class="card-header bg-white d-flex justify-content-between">
            <div>#@Model.OrderId â€¢ @Model.OrderedAt.ToLocalTime().ToString("g")</div>
            <div>@(Model.Cancelled ? "Ä°ptal" : (Model.Shipped ? "OnaylandÄ±" : "Onay AÅŸamasÄ±nda"))</div>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <div class="fw-semibold">@Model.Name</div>
                <div class="text-muted small">@Model.City â€¢ @Model.District / @Model.Neighborhood / @Model.Address</div>
            </div>

            <ul class="list-group list-group-flush">
                @foreach (var line in Model.Lines)
                {
                    var unit = line.Product?.Price ?? line.UnitPrice;
                    var lineTotal = unit * line.Quantity;

                    // GÃ¶rsel yolu: boÅŸsa placeholder'a dÃ¼ÅŸ, doluysa normalize et
                    string imgSrc;
                    if (string.IsNullOrWhiteSpace(line.Product?.ImageUrl))
                    {
                        imgSrc = Url.Content("~/images/placeholders/product-thumb.png");
                    }
                    else if (line.Product!.ImageUrl.StartsWith("http", StringComparison.OrdinalIgnoreCase)
                    || line.Product.ImageUrl.StartsWith("/"))
                    {
                        // Tam URL veya kÃ¶kten gÃ¶reli yol
                        imgSrc = line.Product.ImageUrl;
                    }
                    else
                    {
                        // Sadece dosya adÄ± tutuluyorsa: wwwroot/images altÄ±na tamamla
                        imgSrc = Url.Content($"~/images/{line.Product.ImageUrl}");
                    }

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <img src="@imgSrc" alt="@(line.Product?.ProductName ?? "ÃœrÃ¼n")" class="order-thumb me-3"
                                loading="lazy" width="48" height="48" />
                            <div>
                                <div class="fw-semibold">
                                    @line.Product?.ProductName
                                    @((!string.IsNullOrEmpty(line.Size) ? $" ({line.Size})" : ""))
                                </div>
                                <div class="text-muted small">
                                    @line.Quantity Ã— @unit.ToString("C2")
                                </div>
                            </div>
                        </div>
                        <div class="fw-semibold">@lineTotal.ToString("C2")</div>
                    </li>
                }

              <li class="list-group-item d-flex justify-content-between">
    <span>Ara Toplam</span><span>@total.ToString("C2")</span>
</li>

<li class="list-group-item d-flex justify-content-between">
    <span>Kargo</span>
    @if (shippingCost == 0m)
    {
        <span class="text-success fw-semibold">Ãœcretsiz</span>
    }
    else
    {
        <span>@shippingCost.ToString("C2")</span>
    }
</li>

<li class="list-group-item d-flex justify-content-between fw-bold align-items-baseline">
    <span>Toplam</span>
    <span class="text-primary text-end">
        @grandTotal.ToString("C2")
        @if (installment > 1)
        {
            <span class="text-muted"> (@installment taksit)</span>
            <div class="small text-muted">@installment Ã— @perInstallment.ToString("C2")</div>
        }
    </span>
</li>


            </ul>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-navy btn-pill">SipariÅŸlere DÃ¶n</a>
    </div>
</div>