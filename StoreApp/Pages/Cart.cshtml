@page "/cart"
@model CartModel
@using Entities.Models

@{
    // Sepette beden bilgisi olan en az bir satÄ±r var mÄ±?
    var anySized = Model.Cart?.Lines?.Any(l => !string.IsNullOrEmpty(l.Size)) == true;
    var hasItems = Model.Cart?.Lines?.Any() == true;

    // ðŸ§® Kargo hesaplarÄ±
    decimal total = Model.Cart?.ComputeTotalValue() ?? 0m;
    decimal shippingThreshold = 2000m;
    decimal shippingCost = total <= 0m ? 0m : (total >= shippingThreshold ? 0m : 39.99m);

    decimal grandTotal = total + shippingCost;
    decimal remaining = Math.Max(0m, shippingThreshold - total);
}

<div>
    <div class="display-6 text-center">Sepet</div>

    <!-- ðŸ’› Ãœcretsiz kargo bilgilendirme Ã§ubuÄŸu -->
   @if (total == 0)
{
    <div class="alert alert-light text-center mt-3">
        Sepetiniz boÅŸ. AlÄ±ÅŸveriÅŸe baÅŸlayÄ±n!
    </div>
}
else if (total < shippingThreshold)
{
    // âœ… YÃ¼zdeyi tam sayÄ±ya Ã§evir (74 gibi)
    var progress = (int)Math.Min(100m, Math.Round((total / shippingThreshold) * 100m, 0));

    <div class="p-3 text-center shadow-sm rounded mb-3" style="background-color:#fffbe6;">
        <div class="fw-semibold mb-2 text-navy">ðŸ’› 2000 â‚º Ã¼zeri alÄ±ÅŸveriÅŸlerde kargo bedava!</div>

        <div class="progress" style="height:10px; border-radius:8px;">
            <div class="progress-bar" role="progressbar"
                 style="width:@progress% ; background-color:#ffea00;"
                 aria-valuenow="@progress" aria-valuemin="0" aria-valuemax="100">
            </div>
        </div>

        <small class="text-muted">
            Ãœcretsiz kargo iÃ§in <strong>@remaining.ToString("C2")</strong> daha alÄ±ÅŸveriÅŸ yapÄ±n ðŸšš
        </small>
    </div>
}
else
{
    <div class="p-3 text-center shadow-sm rounded mb-3" style="background-color:#d1e7dd;">
        <div class="fw-semibold text-success">ðŸŽ‰ Tebrikler! SipariÅŸiniz Ã¼cretsiz kargo sÄ±nÄ±rÄ±nÄ± geÃ§ti.</div>
    </div>
}

    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th></th> <!-- foto -->
                <th>ÃœrÃ¼n</th>
                @if (anySized)
                {
                    <th class="text-center">Beden</th>
                }
                <th class="text-center">Adet</th>
                <th>Fiyat</th>
                <th>Toplam</th>
                <th></th> <!-- sil -->
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.Cart?.Lines ?? Enumerable.Empty<CartLine>())
            {
                <tr>
                    <td class="py-2">
                        @{
                            var imgSrc = string.IsNullOrWhiteSpace(line.Product.ImageUrl)
                                ? Url.Content("~/images/placeholder.png")
                                : (line.Product.ImageUrl.StartsWith("~/") || line.Product.ImageUrl.StartsWith("/")
                                    ? Url.Content(line.Product.ImageUrl)
                                    : Url.Content($"~/images/{line.Product.ImageUrl}"));
                        }
                        <img src="@imgSrc" asp-append-version="true" alt="@line.Product.ProductName" class="rounded" width="50" />
                    </td>

                    <td>@line.Product.ProductName</td>

                    @if (anySized)
                    {
                        <td class="text-center fw-semibold">@line.Size</td>
                    }

                    <td class="text-center">
                        <div class="d-inline-flex align-items-center gap-2">
                            <!-- - (1 azalt) -->
                            <form method="post" asp-page-handler="Decrement" class="d-inline">
                                <input type="hidden" name="id" value="@line.Product.ProductId" />
                                <input type="hidden" name="size" value="@line.Size" />
                                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                                <button type="submit" class="btn btn-sm btn-outline-secondary">âˆ’</button>
                            </form>

                            <span class="fw-semibold">@line.Quantity</span>

                            <!-- + (1 artÄ±r) -->
                            <form method="post" asp-page-handler="Increment" class="d-inline">
                                <input type="hidden" name="id" value="@line.Product.ProductId" />
                                <input type="hidden" name="size" value="@line.Size" />
                                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                                <button type="submit" class="btn btn-sm btn-outline-secondary">+</button>
                            </form>
                        </div>
                    </td>

                    <td>@line.Product.Price.ToString("C2")</td>
                    <td>@((line.Product.Price * line.Quantity).ToString("C2"))</td>

                    <td class="text-end">
                        <!-- Tamamen sil -->
                        <form method="post" asp-page-handler="Remove" class="d-inline">
                            <input type="hidden" name="id" value="@line.Product.ProductId" />
                            <input type="hidden" name="size" value="@line.Size" />
                            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fa fa-trash"></i> Sil
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <td colspan="@(anySized ? 5 : 4)" class="text-end fw-semibold">Ara Toplam:</td>
                <td class="text-primary fw-bold">@total.ToString("C2")</td>
                <td></td>
            </tr>
            <tr>
                <td colspan="@(anySized ? 5 : 4)" class="text-end fw-semibold">Kargo:</td>
                <td>
                    @if (shippingCost == 0m)
                    {
                        <span class="text-success fw-semibold">Ãœcretsiz</span>
                    }
                    else
                    {
                        @shippingCost.ToString("C2")
                    }
                </td>
                <td></td>
            </tr>
            <tr class="table-light">
                <td colspan="@(anySized ? 5 : 4)" class="text-end fw-bold">Genel Toplam:</td>
                <td class="fw-bold text-primary fs-5">@grandTotal.ToString("C2")</td>
                <td></td>
            </tr>
        </tfoot>
    </table>

    <div class="text-center my-3">
        <div class="d-flex justify-content-center">
            <a class="btn btn-primary me-2" asp-controller="Product" asp-action="Index">
                AlÄ±ÅŸveriÅŸe Devam Et
            </a>

            @if (hasItems)
            {
                <a class="btn" style="background-color:#ffea00; color:black; border:none;" asp-action="Checkout"
                    asp-controller="Order">
                    Ã–deme Yap
                </a>
            }
            else
            {
                <button type="button" class="btn" style="background-color:#ffea00; color:black; border:none;" disabled
                    title="Sepetiniz boÅŸ">
                    Ã–deme Yap
                </button>
            }
        </div>
    </div>
</div>
