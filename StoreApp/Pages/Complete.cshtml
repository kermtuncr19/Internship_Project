@page "{OrderId:int}"
@model CompleteModel
@{
    var total = Model.Order.Lines.Sum(l => (l.Product?.Price ?? l.UnitPrice) * l.Quantity);
    string statusText = Model.Order.Cancelled ? "ƒ∞ptal"
    : (Model.Order.Shipped ? "Onaylandƒ±" : "Onay A≈üamasƒ±nda");

    // Kargo hesaplarƒ±
    decimal shippingThreshold = 2000m;
    decimal shippingCost = total >= shippingThreshold ? 0m : 39.99m;
    decimal grandTotal = total + shippingCost;

     int installment = Model.Installment; // üëà buradan
    decimal perInstallment = installment > 1 ? grandTotal / installment : 0m;
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="container my-5">

    <!-- ‚úÖ Ye≈üil tik -->
    <div class="text-center mb-4">
        <div class="success-icon mx-auto mb-2">
            <i class="fa-solid fa-circle-check"></i>
        </div>
        <h3 class="fw-bold text-success">Sipari≈üiniz ba≈üarƒ±yla olu≈üturuldu!</h3>
        <div class="text-muted">
            <span class="fw-semibold">#@Model.Order.OrderId</span> ‚Ä¢ @Model.Order.OrderedAt.ToLocalTime().ToString("g")
        </div>
    </div>

    <!-- ‚úÖ Sipari≈ü √ñzeti -->
    <div class="card shadow-soft">
        <div class="card-header bg-white d-flex justify-content-between">
            <div>#@Model.Order.OrderId ‚Ä¢ @Model.Order.OrderedAt.ToLocalTime().ToString("g")</div>
            <div>@statusText</div>
        </div>

        <div class="card-body">
            <div class="mb-3">
                <div class="fw-semibold">@Model.Order.Name</div>
                <div class="text-muted small">
                    @Model.Order.City ‚Ä¢ @Model.Order.District / @Model.Order.Neighborhood / @Model.Order.Address
                </div>
            </div>

            <ul class="list-group list-group-flush">
                @foreach (var line in Model.Order.Lines)
                {
                    var unit = line.Product?.Price ?? line.UnitPrice;
                    var lineTotal = unit * line.Quantity;

                    string imgSrc;
                    if (string.IsNullOrWhiteSpace(line.Product?.ImageUrl))
                    {
                        imgSrc = Url.Content("~/images/placeholders/product-thumb.png");
                    }
                    else if (line.Product!.ImageUrl.StartsWith("http", StringComparison.OrdinalIgnoreCase)
                    || line.Product.ImageUrl.StartsWith("/"))
                    {
                        imgSrc = line.Product.ImageUrl;
                    }
                    else
                    {
                        imgSrc = Url.Content($"~/images/{line.Product.ImageUrl}");
                    }

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <img src="@imgSrc" alt="@(line.Product?.ProductName ?? "√úr√ºn")" class="order-thumb me-3"
                                loading="lazy" width="48" height="48" />
                            <div>
                                <div class="fw-semibold">
                                    @line.Product?.ProductName
                                    @((!string.IsNullOrEmpty(line.Size) ? $" ({line.Size})" : ""))
                                </div>
                                <div class="text-muted small">
                                    @line.Quantity √ó @unit.ToString("C2")
                                </div>
                            </div>
                        </div>
                        <div class="fw-semibold">@lineTotal.ToString("C2")</div>
                    </li>
                }

                <li class="list-group-item d-flex justify-content-between">
                    <span>Ara Toplam</span><span>@total.ToString("C2")</span>
                </li>

                <li class="list-group-item d-flex justify-content-between">
                    <span>Kargo</span>
                    @if (shippingCost == 0m)
                    {
                        <span class="text-success fw-semibold">√úcretsiz</span>
                    }
                    else
                    {
                        <span>@shippingCost.ToString("C2")</span>
                    }
                </li>

               <li class="list-group-item d-flex justify-content-between fw-bold align-items-baseline">
  <span>Toplam</span>
  <span class="text-primary text-end">
    @grandTotal.ToString("C2")
    @if (installment > 1)
    {
      <span class="text-muted"> (@installment taksit)</span>
      <div class="small text-muted">@installment √ó @perInstallment.ToString("C2")</div>
    }
  </span>
</li>


            </ul>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-controller="MyOrders" asp-action="Index" class="btn btn-outline-navy btn-pill me-2">
            <i class="fa-solid fa-box"></i> Sipari≈ülerim
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-navy btn-pill">
            <i class="fa-solid fa-house"></i> Alƒ±≈üveri≈üe Devam Et
        </a>
    </div>
</div>